root = true

[*]
end_of_line = LF
charset = utf-8
indent_size = 4
indent_style = space
max_line_length = 140
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yml,yaml,j2}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[{Makefile,**.mk}]
indent_style = tab
